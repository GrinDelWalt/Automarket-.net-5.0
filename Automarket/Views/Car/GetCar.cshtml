@model Automarket.Domain.Entity.Car
@{
    ViewData["Title"] = "GetCAr";
    Layout = "_Layout";
}

<div style="padding: 10px;"></div>
<div class="card mb-3">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="" 
                 class="img-fluid rounded-start rounded" alt="@Model?.Brend">
        </div>
        <div class="col-md-4">
            <div class="card-body">
                <h5 class="card-title text-center">@Model?.Brend @Model?.Model</h5>
                <p class="card-text"><b>Описание: </b>@Model?.Description</p>
                <p class="card-text"><b>Стоимость: </b>@Model?.Price ₽</p>
                <p class="card-text"><b>Тип: </b>@Model?.TypeCar</p>
                <p class="card-text"><b>Модель: </b>@Model.Model</p>
                <p class="card-text"><small class="text-muted">Дата выпуска - @Model?.DateCreate</small></p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card-body">
                <p class="card-text"><b>Описание: </b>@Model?.Description</p>
            </div>
        </div>
    </div>
</div>



